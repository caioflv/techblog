{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2023"],

		"paths": {
			"@/*": ["./src/*"]
		},

		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": false,

		"strict": true,
		"skipLibCheck": true,

		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["src"],
	"exclude": ["knexfile.js"]
}
